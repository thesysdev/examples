generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Thread {
  id        String   @id @default(cuid())
  name      String
  aiMessages Json // Stores raw AI messages, including tool calls
  uiMessages Json // Stores messages processed for UI display
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
